<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="SpUsage,HardcodedText,RtlHardcoded">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10">
        <ImageView
            android:id="@+id/trade_flow_goods_iv"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_product"/>
        <TextView
            android:id="@+id/trade_flow_goods_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_15"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dp_20"
            android:text="easypoi功能如同名字easy,主打的功能就是容易,让一个没见接触过poi的人员 就可以方便的写出Excel导出,Excel模板导出,Excel导    入,Word模板导出,通过简单的注解和模板 语言(熟悉的表达式语法),完成以前复杂的写法" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/trade_flow_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_15"
                android:text="$19.9"/>
            <TextView
                android:id="@+id/trade_flow_goods_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/dp_15"
                android:layout_gravity="right"
                android:text="x1"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical|right">
        <TextView
            android:id="@+id/trade_flow_actual_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_15"
            android:text="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_15"
            android:text="@string/goods_unit_text"
            android:layout_marginRight="@dimen/dp_10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_15"
            android:text="@string/total"
            android:layout_marginRight="@dimen/dp_5"/>
        <TextView
            android:id="@+id/trade_flow_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_15"
            android:text="$19.90"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/trade_flow_send_goods_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|right"
            android:layout_marginTop="@dimen/dp_10"
            android:visibility="gone">
            <Button
                android:id="@+id/trade_flow_cancel_order_btn"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_30"
                android:text="@string/cancel_order"
                android:textColor="@color/red"
                android:textSize="@dimen/dp_15"
                android:background="@drawable/bg_red_hollow_rectangle"
                android:layout_marginRight="@dimen/dp_10"/>
            <Button
                android:id="@+id/trade_flow_send_goods_btn"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_30"
                android:text="@string/send_goods"
                android:textColor="@color/red"
                android:textSize="@dimen/dp_15"
                android:background="@drawable/bg_red_hollow_rectangle"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/trade_flow_receive_goods_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|right"
            android:visibility="gone">
            <Button
                android:id="@+id/trade_flow_check_delivery_btn"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_30"
                android:text="@string/check_delivery"
                android:textColor="@color/red"
                android:textSize="@dimen/dp_15"
                android:background="@drawable/bg_red_hollow_rectangle"
                android:layout_marginRight="@dimen/dp_10"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/trade_flow_appraise_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|right"
            android:visibility="gone">
            <Button
                android:id="@+id/trade_flow_appraise_btn"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_30"
                android:text="@string/appraise_replay"
                android:textColor="@color/red"
                android:textSize="@dimen/dp_15"
                android:background="@drawable/bg_red_hollow_rectangle"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/trade_flow_refund_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|right"
            android:visibility="gone">
            <Button
                android:id="@+id/trade_flow_refund_btn"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_30"
                android:text="@string/refund"
                android:textColor="@color/red"
                android:textSize="@dimen/dp_15"
                android:background="@drawable/bg_red_hollow_rectangle"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>