<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/bg_gray"
    tools:ignore="ScrollViewSize,SpUsage,RtlHardcoded">
    <include layout="@layout/title_bar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_15"
                    android:text="@string/lease_title"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_10"/>
                <EditText
                    android:id="@+id/lease_title_et"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:hint="@string/input_lease_title"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/black"
                    android:background="@null"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray_line_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_15"
                    android:text="@string/lease_stall_position"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_10"/>
                <EditText
                    android:id="@+id/lease_stall_position_et"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:maxLines="1"
                    android:hint="@string/input_lease_stall_position"
                    android:textSize="@dimen/dp_15"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:background="@null"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray_line_2" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_15"
                    android:text="@string/lease_price"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_10"/>
                <EditText
                    android:id="@+id/lease_price_et"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:maxLines="1"
                    android:hint="@string/input_lease_price"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:background="@null"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray_line_2" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_15"
                    android:text="@string/lease_describe"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_10"/>
                <EditText
                    android:id="@+id/lease_describe_et"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:maxLines="1"
                    android:hint="@string/input_lease_describe"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:background="@null"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray_line_2" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_15"
                    android:text="@string/lease_contact"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_10"/>
                <EditText
                    android:id="@+id/lease_contact_et"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:maxLines="1"
                    android:hint="@string/input_lease_contact"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:background="@null"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray_line_2" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_15"
                    android:text="@string/lease_mobile_phone_num"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_10"/>
                <EditText
                    android:id="@+id/lease_mobile_phone_num_et"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:maxLines="1"
                    android:hint="@string/input_lease_mobile_phone_num"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:background="@null"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray_line_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_15"
                    android:text="@string/lease_term"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_10"/>
                <EditText
                    android:id="@+id/lease_time_et"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:maxLines="1"
                    android:hint="@string/lease_time_hint"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:background="@null"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray_line_2" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_15"
                    android:text="@string/acreage"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_10"/>
                <EditText
                    android:id="@+id/acreage_et"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:maxLines="1"
                    android:hint="@string/acreage_hint"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:background="@null"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray_line_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_15"
                    android:text="@string/lease_info_source"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_10"/>
                <EditText
                    android:id="@+id/lease_info_source_et"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:maxLines="1"
                    android:hint="@string/lease_info_source_hint"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:background="@null"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray_line_2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray_line_2"
                android:layout_marginTop="@dimen/dp_10"/>

            <include layout="@layout/view_upload_image"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>