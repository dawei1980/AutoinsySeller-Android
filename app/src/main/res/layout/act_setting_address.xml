<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:ignore="ScrollViewSize,SpUsage,RtlHardcoded">
    <include layout="@layout/title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_15"
                android:text="@string/receiver"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_10"/>
            <EditText
                android:id="@+id/address_receiver_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:maxLines="1"
                android:hint="@string/receiver_hint"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/black"
                android:background="@null"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/gray_line_2" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_15"
                android:text="@string/receiver_mobile_num"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_10"/>
            <EditText
                android:id="@+id/address_receiver_mobile_num_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:maxLines="1"
                android:hint="@string/receiver_mobile_num_hint"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/black"
                android:background="@null"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/gray_line_2" />
        <RelativeLayout
            android:id="@+id/address_area_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/white">
            <TextView
                android:id="@+id/address_area_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/black"
                android:text="@string/address_area"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15" />
            <TextView
                android:id="@+id/address_area_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/gray_text"
                android:text="@string/address_area_hint"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toRightOf="@id/address_area_text"
                android:layout_marginLeft="@dimen/dp_10"/>
            <ImageView
                android:id="@+id/goods_type_right_arrow"
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_20"
                android:background="@mipmap/right_arrow_gray"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/gray_line_2" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_15"
                android:text="@string/receiver_address_detail"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_10"/>
            <EditText
                android:id="@+id/address_detail_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:maxLines="1"
                android:hint="@string/receiver_address_detail_hint"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/black"
                android:background="@null"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/gray_line_2" />
    </LinearLayout>

    <Button
        android:id="@+id/add_address_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/orange_text"
        android:textSize="@dimen/dp_15"
        android:textColor="@color/white"
        android:text="@string/save"/>
</LinearLayout>