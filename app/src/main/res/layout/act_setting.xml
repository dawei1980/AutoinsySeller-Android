<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/bg_gray"
    tools:ignore="ScrollViewSize,SpUsage,RtlHardcoded">
    <include layout="@layout/title_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <RelativeLayout
            android:id="@+id/setting_upload_header_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_105"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white">
            <ImageView
                android:id="@+id/setting_upload_header"
                android:layout_width="@dimen/dp_55"
                android:layout_height="@dimen/dp_55"
                android:src="@mipmap/default_header"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/word_gray"
                android:textSize="@dimen/dp_15"
                android:text="@string/upload_header"
                android:layout_toRightOf="@id/setting_upload_header"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"/>
            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_15"
                android:background="@mipmap/right_arrow_gray"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/gray_line_2"
            android:layout_marginTop="@dimen/dp_10"/>
        <RelativeLayout
            android:id="@+id/nick_name_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/black"
                android:text="@string/nick_name"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15" />
            <TextView
                android:id="@+id/nick_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@id/nick_name_right_arrow"/>
            <ImageView
                android:id="@+id/nick_name_right_arrow"
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_20"
                android:background="@mipmap/right_arrow_gray"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/gray_line_2"/>
        <RelativeLayout
            android:id="@+id/receive_address_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/black"
                android:text="@string/receive_address"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15" />
            <TextView
                android:id="@+id/receive_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@id/receive_address_right_arrow"/>
            <ImageView
                android:id="@+id/receive_address_right_arrow"
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_20"
                android:background="@mipmap/right_arrow_gray"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/gray_line_2"/>
        <RelativeLayout
            android:id="@+id/bank_account_binding_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/black"
                android:text="@string/bank_account_binding"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15" />
            <TextView
                android:id="@+id/bank_account_binding_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@id/bank_account_binding_right_arrow"/>
            <ImageView
                android:id="@+id/bank_account_binding_right_arrow"
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_20"
                android:background="@mipmap/right_arrow_gray"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/gray_line_2"/>
    </LinearLayout>

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@drawable/rect_corner_orange"
        android:textSize="@dimen/dp_15"
        android:textColor="@color/white"
        android:text="@string/logout"
        android:layout_marginBottom="@dimen/dp_30"/>
</LinearLayout>