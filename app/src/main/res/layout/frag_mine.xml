<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mine_bg"
    tools:ignore="RtlHardcoded,SpUsage,HardcodedText,InefficientWeight">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_195"
                android:orientation="vertical"
                android:background="@mipmap/personal_bg">
                <ImageView
                    android:id="@+id/mine_setting_iv"
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_margin="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/setting" />
                <ImageView
                    android:id="@+id/mine_header_iv"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/default_header"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_40"/>
                <TextView
                    android:id="@+id/mine_username_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_below="@id/mine_header_iv"
                    android:layout_centerHorizontal="true"
                    android:text="dddd" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rect_corner_white"
                android:layout_margin="@dimen/dp_10">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_15"
                        android:text="@string/all_order_text"
                        android:layout_marginLeft="@dimen/dp_10"/>
                    <TextView
                        android:id="@+id/check_all_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_15"
                        android:text="@string/check_order"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_15">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/wait_send_stock"
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:background="@mipmap/wait_send"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dp_10"
                            android:text="@string/wait_send_stock"
                            android:layout_marginTop="@dimen/dp_5"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/wait_receive_stock"
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:background="@mipmap/wait_receive"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dp_10"
                            android:text="@string/wait_receive_stock"
                            android:layout_marginTop="@dimen/dp_5"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/wait_comment_stock"
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:background="@mipmap/wait_receive"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dp_10"
                            android:text="@string/wait_comment_stock"
                            android:layout_marginTop="@dimen/dp_5"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/exchange_stock"
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:background="@mipmap/exchange_stock"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dp_10"
                            android:text="@string/exchange_stock"
                            android:layout_marginTop="@dimen/dp_5"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/rect_corner_white">

                <RelativeLayout
                    android:id="@+id/mine_product_management_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10">
                    <ImageView
                        android:id="@+id/mine_product_management_iv"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:background="@mipmap/product_manager"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_15"
                        android:text="@string/goods_management_text"
                        android:layout_toRightOf="@id/mine_product_management_iv"
                        android:layout_centerVertical="true"/>

                    <ImageView
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_15"
                        android:background="@mipmap/right_arrow_gray"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/gray_line_2"
                        android:layout_below="@id/mine_product_management_iv"
                        android:layout_marginTop="@dimen/dp_15"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mine_ornament_management_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10">
                    <ImageView
                        android:id="@+id/mine_ornament_management_text_iv"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:background="@mipmap/mine_ornament"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_15"
                        android:text="@string/ornament_management_text"
                        android:layout_toRightOf="@id/mine_ornament_management_text_iv"
                        android:layout_centerVertical="true"/>

                    <ImageView
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_15"
                        android:background="@mipmap/right_arrow_gray"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/gray_line_2"
                        android:layout_below="@id/mine_ornament_management_text_iv"
                        android:layout_marginTop="@dimen/dp_15"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/mine_service_management_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10">
                    <ImageView
                        android:id="@+id/mine_service_management_text_iv"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:background="@mipmap/mine_serivce"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_15"
                        android:text="@string/service_management_text"
                        android:layout_toRightOf="@id/mine_service_management_text_iv"
                        android:layout_centerVertical="true"/>

                    <ImageView
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_15"
                        android:background="@mipmap/right_arrow_gray"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/gray_line_2"
                        android:layout_below="@id/mine_service_management_text_iv"
                        android:layout_marginTop="@dimen/dp_15"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mine_lease_management_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10">
                    <ImageView
                        android:id="@+id/mine_lease_management_text_iv"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:background="@mipmap/mine_lease"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_15"
                        android:text="@string/lease_management_text"
                        android:layout_toRightOf="@id/mine_lease_management_text_iv"
                        android:layout_centerVertical="true"/>

                    <ImageView
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_15"
                        android:background="@mipmap/right_arrow_gray"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/gray_line_2"
                        android:layout_below="@id/mine_lease_management_text_iv"
                        android:layout_marginTop="@dimen/dp_15"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mine_recuit_management_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10">
                    <ImageView
                        android:id="@+id/mine_recuit_management_text_iv"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:background="@mipmap/mine_recuit"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_15"
                        android:text="@string/recuit_management_text"
                        android:layout_toRightOf="@id/mine_recuit_management_text_iv"
                        android:layout_centerVertical="true"/>

                    <ImageView
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_15"
                        android:background="@mipmap/right_arrow_gray"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/gray_line_2"
                        android:layout_below="@id/mine_recuit_management_text_iv"
                        android:layout_marginTop="@dimen/dp_15"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mine_rescue_management_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10">
                    <ImageView
                        android:id="@+id/mine_rescue_management_text_iv"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:background="@mipmap/mine_rescue"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_15"
                        android:text="@string/rescue_mangement_text"
                        android:layout_toRightOf="@id/mine_rescue_management_text_iv"
                        android:layout_centerVertical="true"/>

                    <ImageView
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_15"
                        android:background="@mipmap/right_arrow_gray"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/gray_line_2"
                        android:layout_below="@id/mine_rescue_management_text_iv"
                        android:layout_marginTop="@dimen/dp_15"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>