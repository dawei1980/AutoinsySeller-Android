<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rect_corner_white"
    android:orientation="horizontal"
    tools:ignore="SpUsage,HardcodedText,RtlHardcoded">
    <ImageView
        android:id="@+id/discover_header"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_header"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp_10">

        <TextView
            android:id="@+id/discover_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="在命令提示窗口中删除数据表"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10">

            <com.autionsy.seller.views.GridViewInScrollView
                android:id="@+id/item_discover_gv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="5dip"
                android:numColumns="3"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dip"
                android:layout_weight="1"
                tools:ignore="InefficientWeight" />
            <TextView
                android:id="@+id/discover_publish_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="2018-12-09 08：12：12"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_15" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>